@model List<Products> 

    <style>
       
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        h1 {
            color: #333;
        }

        table {
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f2f2f2;
        }
    </style>


<body>
    <h1>Company Products</h1>
     
    <table>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
        </tr>
        @foreach(Products item in ViewBag.items)
        {
         <tr>
            <th>@item.Name</th>
            <th>@item.Description</th>
            <th>@item.Price</th>
        </tr>
        }
       
